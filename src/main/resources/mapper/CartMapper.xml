<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mall.dao.CartDao">
    <insert id="insertCart" parameterType="mall.model.Cart" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart (goodsname,number, price,goodid,uid)
        VALUES(#{goodsname}, #{number}, #{price},#{goodid},#{uid});
    </insert>
    <select id="getCartByUGid" resultType="mall.model.Cart">
        SELECT * FROM cart WHERE goodid=#{gid} and uid=#{uid}
    </select>
    <update id="updateCart" parameterType="int">
        UPDATE cart SET number = #{number},price = #{price} where id = #{id}
    </update>
    <select id="getAllCart" parameterType="int" resultType="mall.model.Cart">
        SELECT * FROM cart WHERE uid = #{uid}
    </select>
    <delete id="deleteOne" parameterType="int">
        DELETE FROM cart WHERE id = #{id}
    </delete>
    <delete id="deleteAll" parameterType="int">
        DELETE FROM cart WHERE uid = #{uid}
    </delete>
    <update id="updateSales" parameterType="int">
        UPDATE goods SET sales = sales + #{number} WHERE gid = #{gid}
    </update>
</mapper>